<idea-plugin>
    <id>pl.iterators.kebs-intellij</id>
    <name>Kebs</name>
    <vendor>Iterators</vendor>
    <version>replaced-by-build</version>

    <description><![CDATA[
        A companion IntelliJ IDEA plugin for <a href="https://github.com/theiterators/kebs">kebs</a> library.
        <br/><br/>
        It enhances experience with the library. Features:
        <ul>
            <li>
                support for code generated by macros in
                <a href="https://github.com/theiterators/kebs#tagged-types"><code>@tagged</code></a>
            </li>
            <li>
                generate <a href="https://github.com/theiterators/kebs#tagged-types"><code>@tagged</code></a> object
                based on a case class (check "Generate" (Alt-Insert / &#x2318;N) actions when the cursor
                is on a case class name)
            </li>
        </ul>
    ]]></description>

    <change-notes>replaced-by-build</change-notes>

    <idea-version since-build="223" until-build="233.*"/>

    <depends>org.intellij.scala</depends>
    <depends>com.intellij.java</depends>
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="org.intellij.scala">
        <syntheticMemberInjector implementation="pl.iterators.kebs.intellij.synthetic.macros.TaggedInjector"/>
    </extensions>

    <actions>
        <action id="kebs.tagged-object-generate"
                class="pl.iterators.kebs.intellij.action.GenerateTaggedObjectAction"
                text="Generate @tagged object"
                description="Generate @tagged object">
            <add-to-group group-id="GenerateGroup" anchor="last"/>
        </action>
    </actions>

</idea-plugin>
