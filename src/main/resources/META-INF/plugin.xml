<idea-plugin>
    <id>pl.iterators.kebs-intellij</id>
    <name>Kebs for IntelliJ</name>
    <vendor>Iterators</vendor>
    <version>replaced-by-build</version>

    <description><![CDATA[
        A companion IntelliJ IDEA plugin for <a href="https://github.com/theiterators/kebs">kebs</a> library
        <br/><br/>
        It enhances experience with the library by adding support for code generated by macros from kebs.
    ]]></description>

    <!--
    <change-notes>replaced-by-build</change-notes>
    -->

    <idea-version since-build="203" until-build="203.*"/>

    <depends>org.intellij.scala</depends>

    <extensions defaultExtensionNs="org.intellij.scala">
        <syntheticMemberInjector implementation="pl.iterators.kebs.intellij.synthetic.macros.TaggedInjector"/>
    </extensions>

</idea-plugin>
